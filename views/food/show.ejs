<%- include ("../partials/header")%>
<div class="container" style="padding-top: 90px;">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Guwahati Food Blog</p>
			<div class="list-group">
				<li class="list-group-item active">info</li>
				<li class="list-group-item">info</li>
				<li class="list-group-item">info</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<h1><a><%=food.title%></a></h1>
				<div class="row">
				<img class="img-responsive col-md-6 col-xs-12 mb-1 " src="<%= food.image1%>">
				<img class="img-responsive col-md-6 col-xs-12" src="<%= food.image2%>">
				</div>
				
				<!-- <div class="caption-full"> -->
				<div class="container"> 
					<p><%-food.description%></p>
					<p><em>Submitted By <%=food.author.username%></em></p>
		
				</div>
			</div>
			<div class="Well">
				<div class="text-right">
					<a class="btn btn-success"href="/<%=food._id%>/comments/new">Add new Comment </a>
				</div>
				<hr>
				<% food.comments.forEach(function(comment){ %>
         
				<div class="row">
					<div class="col-md-12">
						<strong> <%=comment.author.username%> </strong>
							<span class="pull-right">10 days ago </span>
						<p>
							<%= comment.text%> 
						</p>
		
					</div>
				</div>
<%})%>
			</div>
		</div>
	</div>
</div>








<%- include ("../partials/footer")%>