            <select class="custom-select d-block w-100" name="food[category]" required>
              <option value="<%=food.category%>"><%=food.category%></option>
            </select>
			</div>	
				<div class="form-group">
			<label>Approx Reading Time (Minutes) </label>
			<input class="form-control"type="number" name="food[Price]" placeholder="Minutes" min="1" step="1">
		  		</div>
	
    
       <div class="wrappers form-group">
           <label>Tags Related To Your Post</label>
            <div class="tags">
                
                <div class="wrapper-tags focus">
                    <div class="view-tags">
						<% food.tagOutput.split(',').forEach(function(tag){ %>
						  <span class="tag" data-tag="<%=tag %>"><%=tag %><i class="fa fa-close"></i></span>
					    <% }) %>

                        <input type="text" class="input-tag">
						<input type="hidden" id="tagOutput" name="food[tagOutput]" value="<%=food.tagOutput%>">
                    </div>
                </div>
                
                <div class="show-error length">Please write tag bettwen 1 to 20 chracters.</div>
                <div class="show-error lengthTags">You can&#39;t add more than 10 tags.</div>
                <div class="show-error validChar">Please type &#91;A - z&#93; or &#91; أ - ي &#93; chracters.</div>
